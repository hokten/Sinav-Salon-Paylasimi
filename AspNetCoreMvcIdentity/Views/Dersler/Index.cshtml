@model IEnumerable<AspNetCoreMvcIdentity.Models.Ders>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DersKodu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DersAdi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Parent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Program)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DersKodu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DersAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Parent.DersId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Program.ProgramId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DersId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DersId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DersId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
